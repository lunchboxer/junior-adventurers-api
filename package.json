{
  "name": "junior-adventurers",
  "version": "0.1.0",
  "description": "graphql api for 2nd grade class",
  "repository": {
    "type": "git",
    "url": "https://github.com/lunchboxer/junior-adventurers"
  },
  "scripts": {
    "lint": "npm run lint:server && npm run lint:svelte",
    "lint:server": "eslint src --fix",
    "lint:svelte": "eslint svelte --fix",
    "dev:svelte": "snowpack dev",
    "minify-css": "postcss public/index.css > public/index.min.css",
    "launch-browser": "bash ./launch-unsafe-chrome.sh",
    "build": "npm run minify-css && snowpack build",
    "start": "NODE_ENV=testing ARC_LOCAL=1 npx sandbox",
    "test": "NODE_ENV=testing PORT=6666 tape test/*.test.js ./test/**/*.test.js | tap-spec"
  },
  "devDependencies": {
    "@architect/sandbox": "^3.3.6",
    "@begin/data": "latest",
    "@graphql-eslint/eslint-plugin": "^0.8.0",
    "@snowpack/plugin-svelte": "^3.5.2",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "graphql": "^15.5.0",
    "nanoid": "^3.1.20",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.1",
    "snowpack": "^3.0.11",
    "stylelint-config-recommended": "^3.0.0",
    "svelte": "^3.32.0",
    "svelte-spa-router": "^3.1.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1",
    "tiny-json-http": "^7.3.0"
  }
}
